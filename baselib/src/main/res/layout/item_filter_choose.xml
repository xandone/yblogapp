<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/shape_ver_divide_line"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:showDividers="middle">

    <TextView
        android:id="@+id/filter_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="#555"
        android:textSize="14sp"
        tools:text="类别" />

    <TextView
        android:id="@+id/filter_choose_tv"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_stroke_gray_4"
        android:drawableRight="@drawable/ddm"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="全部"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/end_date_tv" />


</LinearLayout>